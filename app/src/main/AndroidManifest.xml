<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jdkgroup.tab">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.jdkgroup.swipetab.ActivitySwipeTab">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.jdkgroup.materialtab.ActivityTabText"/>
        <activity android:name="com.jdkgroup.materialtab.ActivityTabIcon"/>
        <activity android:name="com.jdkgroup.materialtab.ActivityTabSwipableIcon"/>
        <activity android:name="com.jdkgroup.materialtab.ActivityTabSwipableText"/>
        <activity android:name="com.jdkgroup.tabactivity.ActivityText"/>

    </application>

</manifest>